<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quiz Questions</title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-light">
    <header class="bg-primary text-white py-4 mb-5">
      <div class="container">
        <h1 class="text-center">Questions</h1>
      </div>
    </header>
    
    <main class="container mb-5">
      <section class="quiz-container">
        <form id="quizForm">
          <% questions.forEach((question, index) => { %>
          <article class="card shadow-sm mb-4">
            <div class="card-header bg-white">
              <h5 class="card-title mb-0">Question <%=question.QID%></h5>
            </div>
            <div class="card-body">
              <p class="question-text mb-4"><%= question.Stem%></p>
              
              <div class="options">
                <div class="form-check mb-3">
                  <input class="form-check-input" type="radio" name="question<%=question.QID%>" id="q<%=question.QID%>_A" value="A" />
                  <label class="form-check-label" for="q<%=question.QID%>_A"><%= question.Alt_A %></label>
                </div>
                <div class="form-check mb-3">
                  <input class="form-check-input" type="radio" name="question<%=question.QID%>" id="q<%=question.QID%>_B" value="B" />
                  <label class="form-check-label" for="q<%=question.QID%>_B"><%= question.Alt_B %></label>
                </div>
                <div class="form-check mb-3">
                  <input class="form-check-input" type="radio" name="question<%=question.QID%>" id="q<%=question.QID%>_C" value="C" />
                  <label class="form-check-label" for="q<%=question.QID%>_C"><%= question.Alt_C %></label>
                </div>
                <div class="form-check mb-0">
                  <input class="form-check-input" type="radio" name="question<%=question.QID%>" id="q<%=question.QID%>_D" value="D" />
                  <label class="form-check-label" for="q<%=question.QID%>_D"><%= question.Alt_D %></label>
                </div>
              </div>
            </div>
          </article>
          <% }) %>

          
        </form>
      </section>
    </main>
    
    <footer class="bg-dark text-white text-center py-3 mt-auto">
      <div class="container">
        <p class="mb-0">Â© 2025 Quiz Application</p>
      </div>
    </footer>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
  </body>
</html>